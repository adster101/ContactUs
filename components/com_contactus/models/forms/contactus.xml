<?xml version="1.0" encoding="UTF-8"?>
<form 
  addrulepath="components/com_contactus/models/rules">
  <fieldset 
    name="register" 
    label="">
    
    <field 
      name="name" 
      type="text"
      description="COM_CONTACTUS_NAME_DESCRIPTION"
      hint="COM_CONTACTUS_NAME_PLACEHOLDER"
      filter="string"
      maxlength="100"
      label="COM_CONTACTUS_NAME_LABEL"
      required="true"
      class=""
      size="10"
      labelclass=""
    />

    <field 
      name="email" 
      type="email"
      description="COM_CONTACTUS_EMAIL_DESCRIPTION"
      field="id"
      filter="string"
      hint="COM_CONTACTUS_EMAIL_PLACEHOLDER"
      label="COM_CONTACTUS_EMAIL_LABEL"
      message="COM_CONTACTUS_EMAIL_MESSAGE"
      required="true"
      size="30"
      class=""
      validate="email"
      labelclass=""
    />
        
    <field
      name="tel"
      type="tel"
      hint="COM_CONTACTUS_TEL_PLACEHOLDER"
      id="phone_1"
      description="COM_CONTACTUS_TEL_DESCRIPTION"
      filter="string"
      label="COM_CONTACTUS_TEL_LABEL"
      message="COM_CONTACTUS_TEL_MESSAGE"
      size="30"
      class=""
      required="false"
      labelclass=""
      validate="tel"
    />
    
    <field
      name="message"
      type="textarea"
      filter="string"
      class=""
      labelclass=""
      label="COM_CONTACTUS_MESSAGE_LABEL"
      description="COM_CONTACTUS_MESSAGE_DESCRIPTION"
      message="COM_CONTACTUS_MESSAGE_MESSAGE"
      validate="length"
      maxlength="1000"
      required="true"
      rows="6"
    />
    
  </fieldset>
    
</form>